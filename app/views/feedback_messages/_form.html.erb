<%= simple_form_for(@feedback_message, :html => {'data-abide' => ' ' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :subject, label: "Θέμα", collection: ["Τεχνικό Προβλημα","Αιτημα για τροποποιηση/αφέρεση πληροφοριών","Ιδέες και προτάσεις","Άλλο"], prompt: "Επιλέξτε θέμα"%>
    <%= f.input :name, label: "Όνομα"%>

    <div class="input email required feedback_message_email">
      <label class="email required control-label" for="feedback_message_email"><abbr title="required">*</abbr> Email</label>  
      <input class="string email required" id="feedback_message_email" name="feedback_message[email]" placeholder="user@example.com" type="email" />
      <small class="error">Το E-mail δεν ειναι εγγυρο.</small>
    </div>
    
    <%= f.input :body,label: "Περιεχόμενο" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit,  :class => "btn-primary", value: "Αποστολή"  %>
  </div>
<% end %>