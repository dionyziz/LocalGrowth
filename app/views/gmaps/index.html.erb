<%= stylesheet_link_tag :gmaps, :media => "all" %>

<script src="//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry" type="text/javascript"></script>
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" type="text/javascript"></script>

<div class="page-header">
  <%= link_to new_gmap_path, :class => 'btn btn-primary' do %>
    <i class="icon-plus icon-white"></i>
    New Gmap
  <% end %>
  <h1>Listing gmaps</h1>
</div>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Address</th>
      <th>Description</th>
      <th>Title</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
<% @gmaps.each do |gmap| %>
    <tr>
      <td><%= gmap.latitude %></td>
      <td><%= gmap.longitude %></td>
      <td><%= gmap.address %></td>
      <td><%= gmap.description %></td>
      <td><%= gmap.title %></td>
      <td><%= link_to 'Show', gmap %></td>
      <td><%= link_to 'Edit', edit_gmap_path(gmap) %></td>
      <td><%= link_to 'Destroy', gmap, data: { confirm: 'Are you sure?' }, method: :delete %></td>
    </tr>
<% end %>
  </tbody>
</table>


<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>


<!-- SCRIPT TO GENERATE THE MAP -- >

<script type="text/javascript">
    handler = Gmaps.build('Google');
    handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
        markers = handler.addMarkers(<%=raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
    });
</script>