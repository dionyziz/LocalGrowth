<article>
  <div class="section-container auto" data-section>
    <section class="active">
      <p class="title" data-section-title><a href="#panel1">General</a></p>
      <div class="content" data-section-content>
        <table>
          <thead>
            <tr>
              <th width="90">Logo</th>
              <th width="70">Title</th>
              <th width="200">Phones</th>
              <th width="200">Info</th>           
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= image_tag "#{fun_shop.logo_url}", class: "geush-logo"%></td>
              <td><%= fun_shop.title %></td>
              <td><ul>
                <% if fun_shop.phones.any? %>
                  <% if fun_shop.phones.count > 1 %>
                    <th>Τηλέφωνα</th>
                  <% else %>
                    <th>Τηλέφωνο</th>
                  <% end %>
                  <% fun_shop.phones.each do |phone| %>
                    <li><%= phone.number_type + ": " + phone.number %></li>
                  <% end %> 
                <% end %>
              </ul></td>
              <td>
                <p>Διεύθυνση: <%= fun_shop.address %>   </p>          
                <p><%= fun_shop.description %></p>
                Likes: <span id="likes_count<%=fun_shop.class.to_s%><%=fun_shop.id%>"><%= fun_shop.likes.count %><span>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </section>
    <section>
      <p class="title" data-section-title><a href="#panel2">Subcategories</a></p>
      <div class="content" data-section-content>
        <% if fun_shop.fun_subcategories.any? %>
          <tr>
            <th width="100%"  class="subcategory center">          
                <b>Υποκατηγορίες:</b>
            </th>
          </tr>      
          <tr>
            <td width="100%" class="center">              
              <% fun_shop.fun_subcategories.each do |subcategory| %>
                <b class="subcategories"><%= subcategory.title %></b>
              <% end %> 
            </td>
          </tr>
        <% end %>
      </div>
    </section>
    <section>
      <p class="title" data-section-title><a href="#panel3">Deals</a></p>
      <div class="content" data-section-content>
        <p>Content of section 3.</p>
      </div>
    </section>
    <section>
      <p class="title" data-section-title><a href="#panel4">Links</a></p>
      <div class="content" data-section-content>
        <p>Content of section 4.</p>
      </div>
    </section>
  </div>
  <%= render 'shared/like_form', :likeable => fun_shop if user_signed_in? %>

  
</article>